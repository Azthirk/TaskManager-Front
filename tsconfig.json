{
  "compilerOptions": {
    "target": "ES6",                      // Sets the output JS standard
    "module": "ESNext",                   // Use ES modules (more React friendly)
    "jsx": "react-jsx",                   // Proper configuration for React 17+
    "strict": true,                       // Enable all TypeScript strict checks
    "esModuleInterop": true,              // Allow importing common modules
    "moduleResolution": "node",           // Node.js style module resolution
    "resolveJsonModule": true,            // Allow importing JSON files
    "skipLibCheck": true,                 // Skip type checking for libraries
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"                             // Make sure to include all files in the `src` folder
  ]
}